<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputEditTextTheme" parent="AppTheme">
        <item name="android:textColorHint">@color/c000000</item>
        <item name="colorControlNormal">@color/c000000</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>.


    </style>

    <!--设置toolbar标题主题-->
    <style name="toolBar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--屏幕底部的dialog-->
    <style name="BottomDialog" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/BottomToTopAnim</item>

    </style>

    <style name="BottomToTopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottomview_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottomview_anim_exit</item>
    </style>

    <style name="Theme_Umeng_Push_Splash" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
