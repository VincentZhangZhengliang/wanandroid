<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <LinearLayout
        android:id="@+id/layout_springview_header_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/layout_springview_header_progressbar"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20" />

        <TextView
            android:id="@+id/layout_springview_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:gravity="center"
            android:text="正在刷新内容" />

    </LinearLayout>

    <ImageView
        android:id="@+id/layout_springview_header_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_centerInParent="true"
        android:src="@drawable/default_shuaxin_img1"
        android:visibility="visible" />

</RelativeLayout>