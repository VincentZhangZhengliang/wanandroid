<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="10px"
    app:cardElevation="5px"
    tools:ignore="PxUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_home_iv_pic"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/item_home_tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_home_iv_pic"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/item_home_iv_pic"
                android:layout_toRightOf="@+id/item_home_iv_pic"
                android:gravity="center"
                android:text="鸿洋"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_home_tv_niceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="10小时前"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_home_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="纵享丝滑滑动切换的周月日历，水滴效果，可高度定制，仿小米日历"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/item_home_tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的博客"
                android:textColor="@color/primary"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/item_home_cb_collect"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_cb_collect"
                android:button="@null" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>