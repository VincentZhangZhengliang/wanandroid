<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10px"
        app:cardElevation="10px"
        tools:ignore="PxUsage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20px">

            <ImageView
                android:id="@+id/item_system_iv_arrow"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_favorite_black_24dp"
                tools:ignore="PxUsage" />

            <TextView
                android:id="@+id/item_system_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/item_system_iv_arrow"
                android:text="开发环境" />

            <TextView
                android:id="@+id/item_system_tv_children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/item_system_tv_name"
                android:layout_marginTop="20px"
                android:text="@string/app_name" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>