<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="PxUsage">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        app:cardBackgroundColor="@color/colorBarText"
        app:cardCornerRadius="10px"
        app:cardElevation="15px"
        tools:ignore="PxUsage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20px">

            <ImageView
                android:id="@+id/item_system_iv_arrow"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                tools:ignore="PxUsage" />

            <TextView
                android:id="@+id/item_system_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/item_system_iv_arrow"
                android:text="开发环境"
                android:textColor="@color/primary_text"
                android:textSize="40px" />

            <TextView
                android:id="@+id/item_system_tv_children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/item_system_tv_name"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"
                android:text="开发环境开发环境开发环境开发环境开发环境开发环境开发环境开发环境开发环境开发环境"
                android:textColor="@color/secondary_text"
                android:textSize="30px" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>