    <FrameLayout
        android:background="@color/colorPrimary"
        android:id="@+id/activity_webview_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <WebView
            android:id="@+id/activity_webview_wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

    </FrameLayout>


</LinearLayout>
